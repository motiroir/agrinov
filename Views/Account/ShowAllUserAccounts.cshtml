                    <td>@userAccountViewModel.UserAccount.Mail</td>
                    <td>@userAccountViewModel.UserAccount.UserAccountLevel.GetDisplayName()</td>
                    <td>@userAccountViewModel.UserAccount.DateCreated.ToString("dd/MM/yyyy")</td>
                    <td>
