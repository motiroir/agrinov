@model AgriNov.Models.Activity

@{
    Layout = "_BaseLayout";
    ViewBag.Title = "Détails de l'atelier";
}
@section ExtraStyle {
    <link rel="stylesheet" href="~/CSS/detailstyle.css">
}
<div class="activity-detail-container">
    <div class="full-img"></div>
    <div class="activity-content">
        <a href="@Url.Action("ShowAllActivities", "Activity")">
            <div class="close-btn"></div>
        </a>
        <div class="text-content">
            <h2 class="activity-name">@Model.Name</h2>
            <p class="activity-author">@Model.Location</p>
            <p class="activity-date">@Model.Datetime.ToString("dd/MM/yyyy HH:mm")</p>
            <p class="activity-description">@Model.Description</p>
            <p class="activity-description">@Model.OrganizerId</p>
            <div class="activity-number-display">
                <div>
                    <p class="number-display">@Model.Duration h</p>
                    <p>Durée de l'atelier</p>
                </div>
                <div>
                    <p class="number-display">@Model.MaxParticipants</p>
                    <p>Places restantes</p>
                </div>
                <div>
                    <p class="number-display">@Model.MaxInvitesPerPerson</p>
                    <p>Invité(s) possible</p>
                </div>
            </div>
        </div>
        <div class="btn-div">
            <div class="quantity-selector">
                <button class="minus">-</button>
                <input type="text" value="1" min="1" max="@(@Model.MaxInvitesPerPerson + 1)">
                <button class="plus">+</button>
            </div>
            <button class="btn-inscription">inscription</button>
        </div>
    </div>
</div>

<script src="~/scripts/quantity-selector.js"></script>
