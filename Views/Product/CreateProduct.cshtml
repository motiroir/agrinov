@model AgriNov.Models.Product

<div class="container">
    <h1>Create Product</h1>

    <form asp-action="Create" asp-controller="Product" method="post" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateDeCreation" class="control-label"></label>
            <input asp-for="DateDeCreation" type="date" class="form-control" />
            <span asp-validation-for="DateDeCreation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Prix" class="control-label"></label>
            <input asp-for="Prix" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Prix" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
