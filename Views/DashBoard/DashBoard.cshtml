@model AgriNov.ViewModels.UserAccountInfoUpdate
@{
    Layout = "_BaseLayout";
    ViewBag.Title = "Dashboard";
}

@section ExtraStyle {
    <style>
        .account-container {
            max-width: 1455px;
            margin: 0 auto;
            padding: 20px;
        }

        .account-card {
            background: white;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: start;
        }

        .management-section {
            margin-top: 30px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .management-card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 4px 4px 0 #ff6b6b;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            color: #333;
        }

        .management-card:hover {
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0 #ff6b6b;
        }
    </style>
}

<div class="account-container">
    <div class="account-card">
        @await Html.PartialAsync("_ProfileSection", Model)
        @await Html.PartialAsync("_ActionButtons")
    </div>

    <div class="management-section">
        @await Html.PartialAsync("_ManagementCards")
    </div>
</div>