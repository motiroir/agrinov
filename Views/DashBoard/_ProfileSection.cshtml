@model AgriNov.ViewModels.UserAccountInfoUpdate

<style>
    .profile-section {
        display: flex;
        gap: 20px;
        flex-grow: 1;
    }

    .profile-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #f5f5f5;
        overflow: hidden;
    }

    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .info-row {
        display: flex;
        gap: 5px;
    }

    .info-label {
        color: #666;
        min-width: 100px;
    }

    .info-value {
        color: #333;
    }
</style>

<div class="profile-section">
    <div class="profile-image">
        <img src="~/images/default-profile.png" alt="Profile" />
    </div>

    <div class="profile-info">
        <div class="info-row">
            <span class="info-label">Nom :</span>
            <span class="info-value">@Model.ContactDetails.Name</span>
        </div>
        <div class="info-row">
            <span class="info-label">Prénom :</span>
            <span class="info-value">@Model.ContactDetails.FirstName</span>
        </div>
        <div class="info-row">
            <span class="info-label">Adresse :</span>
            <span class="info-value">@Model.Address.Line1</span>
            <span class="info-value">@Model.Address.Line2</span>
            

        </div>
        
        </div>
        <div class="info-row">
            <span class="info-label">Ville :</span>
            <span class="info-value">@Model.Address.City</span>
        </div>
    </div>
</div>